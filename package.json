    "@vitest/ui": "^1.1.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^7.0.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
